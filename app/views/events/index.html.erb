<h1>所有事件</h1>
<hr/>
<table class="table talbe-bordered">
  <thead>
    <tr>
      <th style="width:200px;">事件</th>
      <th style="width:200px;">日期</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr class="admin">
        <td><%=link_to event.title, event_path(event) %></td>
        <td><%= event.date %></td>
        <td><%= link_to '刪除', event, method: :delete, data: { confirm: '確定嗎？' }, :class => "delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, :class => "button", :style => "color: white" %>
